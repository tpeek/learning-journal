{% extends "base.jinja2" %}
{% block section %}
{% if not request.authenticated_userid %}
<meta http-equiv="refresh" content="0; url={{ request.route_url('home') }}" />
{% endif %}
<nav>
  <ul>
    <li><a href="{{ request.route_url('home') }}">Home</a></li>
    <li><a id="add" class="selected">Add</a></li>
    <li><a href="{{ request.route_url('logout') }}">Log Out</a></li>
  </ul>
</nav>
</header>
<div id="add_field">
  <section>
    {% if not title or not text %}
    <p>Both fields are required</p>
    {% endif %}
    <aside>
      <form action="{{ request.route_url('add') }}" method="POST" class="add_entry">
        <div class="field">
          <p>Entry Title</p>
          <label for="title"></label>
          <input type="text" size="30" name="title" id="title" value={{title}}>
        </div>
        <div class="field">
          <p>How was your day?</p>
          <label for="text"></label>
          <textarea name="text" id="text" rows="10" cols="70">{{text}}</textarea>
        </div>
        <div class="control_row">
          <input id="share" type="submit" value="Share" name="Share"/>
        </div>
      </form>
    </aside>
  </section>
</div>
</body>
{% endblock %}