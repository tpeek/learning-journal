<div id="add_field">
  <section>
    {% if not title or text %}
    <p>Both fields are required</p>
    {% endif %}
    <aside id="add_it">
      <form id="form" action="loadXMLDoc2()" method="POST" class="add_entry">
        <div class="field">
          <p>Entry Title</p>
          <label for="title"></label>
          <input type="text" size="30" name="title" id="title" value="{{title}}">
        </div>
        <div class="field">
          <p>How was your day?</p>
          <label for="text"></label>
          <textarea name="text" id="text" rows="10" cols="70">{{text}}</textarea>
        </div>
      </form>
    </aside>
  </section>
</div>